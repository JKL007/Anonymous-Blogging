<%- include("partials/header"); -%>

<div class="jumbotron centered">
  <div class="container mt-5">
    <div class="row">

      <img class="yourblogs-img" src="/images/blogs1.png" alt="blogs1-img">

        <h1>Your Blogs</h1>
        <p><%= startingContent %></p>

        <% thisUserPost.forEach(function(p) {%>
          <h2><%= p["title"] %> </h2>
          <p><%= p.content.substring(0, 200) + "..." %>
          <a href="/blogs/<%= p["title"] %>">Read More</a>
          </p>
        <% })%>

    </div>
  </div>
</div>

<%- include("./partials/footer"); -%>
