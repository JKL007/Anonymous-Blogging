<%- include("partials/header"); -%>

<div class="jumbotron centered">
  <div class="container mt-5">
    <div class="row">
        <h1>Compose</h1>
        <form action="/compose" method="post">
          <div class="form-group">
            <label>Title*</label>
            <input type="text" class="form-control" name="newTitle" required>
            <label for="newContent">Content</label>
            <textarea name="newContent" class="form-control" rows="10" cols="30"></textarea>
          </div>

          <button type="submit" name="button" class = "btn btn-primary">Publish</button>
        </form>
    </div>

    <div class="row">
        <img class="compose-img" src="/images/compose.png" alt="blogs3-img">
    </div>
  </div>

</div>
